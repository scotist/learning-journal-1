{% extends "index.html" %}
{% block navbar %}
{% if request.has_permission('edit') %}
<li><a href="/logout">Logout</a></li>
{% else %}
<li><a href="/login">Login</a></li>
{% endif %}
{% endblock %}
{% block content %}
<div class="container">
    <div class="row">
        <div class="col-sm-2">
        </div>
        <div class="col-sm-8">
            <article>
                <h1>{{ entry.title }}</h1>
                <p>{{ entry.text }}</p>
                <p>{{ entry.created.strftime("%B %d %Y -- %I:%M%p UTC") }}</p>
                <hr>
                {{ text|safe }}
                <hr>
            </article>
        </div>
        <div class="col-sm-2">
        </div>
    </div>
    {% if request.has_permission('edit') %}
    <div class="row">
        <div class="col-sm-2">
        </div>
        <div class="col-sm-6">
            <a class="btn btn-default" href="/edit/{{ entry.id }}">Edit Entry</a>
        </div>
        <div class="col-sm-2">
            <a class="btn btn-danger" href="/delete_entry/{{ entry.id }}">Delete Entry</a>
        </div>
        <div class="col-sm-2">
        </div>
    </div>
    {% endif %}
</div>
{% endblock %}
