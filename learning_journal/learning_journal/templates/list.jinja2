
{% extends "index.html" %}
    {% block navbar %}
    {% if request.has_permission('edit') %}
    <li><a href="/logout">Logout</a></li>
    {% else %}
    <li><a href="/login">Login</a></li>
    {% endif %}
    {% endblock %}
    {% block content %}
    <div class="container">
        {% if request.has_permission('edit') %}
        <div class="row">
            <div class="col-sm-9">
            </div>
            <div class="col-md-3">
                <a class="btn btn-primary" href="/create">New Entry</a>
            </div>
        </div>
        {% endif %}
    </div>
    {% for entry in content[::-1] %}
    <div class="row">
        <div class="col-md-2">
        </div>
        <div class="col-md-8">
            <section id="articles">
                <article id="article_template">
                    <h1><a href="/view/{{ entry.id }}">{{ entry.title }}</a></h1>
                    <p>{{ entry.text }}</p>
                    <p>{{ entry.created.strftime("%B %d %Y -- %I:%M%p UTC") }}</time>
                </article>
            </section>
            <hr>
        </div>
        <div class="col-sm-2">
        </div>
    </div>
    {% endfor %}
{% endblock %}
