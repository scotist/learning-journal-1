
<!doctype html>
<html>
  <head>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/skeleton/2.0.4/skeleton.min.css" rel="stylesheet">
    <style>
      * {
        font-family: monospace;
      }
      body {
        background: url(/static/bg.jpg);
        /*background-position: bottom;*/
        background-size: cover;
        color: #ddd;
      }
      .terminal {
        margin-top: 20vh;
        background: #1d1d1d;
        height: 340px;
        border: 5px #333 solid;
        /*padding-left: 5px;*/
        /*padding-right: 5px;*/
        padding: 5px;
      }
      .green {
        color: #b8d68c;
      }
      .blue {
        color: #4d679a;
      }
      .red {
        color: #e84f4f;
      }
      .purple {
        color: #9b64fb;
      }
      .orange {
        color: #e1aa5d;
      }
      .blue2 {
        color: #6d878d;
      }

      a {
        color: #ddd;
        text-decoration: none;
        transition: .3s;
      }
      a:hover {
        transition: .3s;
      }
      a span:hover {
        transition: .3s;
        color: #1EAEDB;
      }
      .gray {
        color: #333;
      }
      input {
        background: #1d1d1d;
        border: none;
        width: 45%;
      }
      input:focus {
        outline-width: 0;
      }

    </style>
    <title>Start Page</title>
  </head>
  <body>
    <div class="container">
      <div class="one column">&nbsp;</div>
      <div class="ten columns terminal">
        <span class="green">nortonpengra</span>@<span class="purple">thatonelegend</span><span class="red">:~$</span> python3.5 -m <span class="green">"everyday.life"</span> -all <span class="orange">||</span> ./easy_view.sh
        <br>
        <!-- <br> -->
        <div class="row" style="text-align: center">
          <span><marquee style="color: #bada55;">Norton is cool!</marquee></span>
        </div>
        <div class="row">
          <div class="six columns">
            <span class="blue">{{header}}_</span><br>
            {% for entry in content %}
              <a href="/view/{{entry.id}}">{{entry.title}}</a><br/>
            {% endfor %}
          </div>
          <div class="six columns">
            <span class="green">options_</span><br>
              <a href="/create">Create an entry</a><br>
              <a href="/login">Login</a><br>
              <a href="/logout">Logout</a><br>
          </div>
        </div>
        <!-- <br> -->
        <form action="http://www.google.com/search">
          <span class="green">nortonpengra</span>@<span class="purple">thatonelegend</span><span class="red">:~$</span> wget <span class="purple">google.com/search?q=</span><input name="q" class="green" autofocus autocomplete='off'>
        </form>
      </div>
    </div>
  </body>
</html>
